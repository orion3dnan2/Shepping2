# Fixed Apache Configuration for Shipping Management System
# cPanel Hosting Configuration - Optimized to prevent 503 errors

# Environment Variables - MUST BE SET FIRST
SetEnv DATABASE_URL "mysql+pymysql://shipping_user:your_password@localhost/shipping_system"
SetEnv SESSION_SECRET "your-secure-random-session-key-change-this-in-production"
SetEnv FLASK_ENV "production"

# Python Configuration - UPDATE THESE PATHS
PassengerPython /home/cpanel_username/virtualenv/public_html/shipping/3.11/bin/python
PassengerAppRoot /home/cpanel_username/public_html/shipping
PassengerStartupFile passenger_wsgi.py
PassengerAppType wsgi

# Passenger Configuration - Critical for preventing 503
PassengerEnabled On
PassengerFriendlyErrorPages On
PassengerMinInstances 1
PassengerMaxRequests 1000
PassengerSpawnMethod smart

# Fix for common 503 issues
PassengerStickySessions On
PassengerMaxPoolSize 6
PassengerPoolIdleTime 300

# Rewrite Rules
RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ passenger_wsgi.py [QSA,L]

# File Upload Settings
LimitRequestBody 16777216

# Security Headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"

# Cache Static Files
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg)$">
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
    Header append Cache-Control "public"
</FilesMatch>

# Protect Python files but allow WSGI
<FilesMatch "\.(py|pyc|pyo)$">
    Require all denied
</FilesMatch>

<Files "passenger_wsgi.py">
    Require all granted
</Files>

# Error Pages
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html