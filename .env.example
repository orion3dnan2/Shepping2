# مثال على متغيرات البيئة المطلوبة للنظام
# انسخ هذا الملف إلى .env وقم بتعديل القيم

# بيئة التطبيق - استخدم 'production' في بيئة الإنتاج
FLASK_ENV=development

# مفتاح الجلسة السري - يجب أن يكون معقد وفريد في بيئة الإنتاج
SESSION_SECRET=your-very-secure-session-secret-key-here-change-me

# رابط قاعدة البيانات
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# إعدادات الأمان الإضافية
WTF_CSRF_TIME_LIMIT=3600
WTF_CSRF_SSL_STRICT=True

# إعدادات الرفع للملفات (بالبايت)
MAX_CONTENT_LENGTH=16777216  # 16MB

# إعدادات التسجيل
LOG_LEVEL=INFO
LOG_FILE=app.log

# إعدادات البريد الإلكتروني (اختيارية)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password